# BEwithU 环境配置文件
# 复制此文件为 .env 并修改相应的值

# ===========================================
# 数据库配置
# ===========================================
POSTGRES_PASSWORD=bewithU_secure_password_2024
DATABASE_URL=postgresql://bewithU_user:bewithU_secure_password_2024@localhost:5432/bewithU

# ===========================================
# Redis配置
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# JWT和安全配置
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-session-secret-key-change-this-too

# ===========================================
# n8n配置
# ===========================================
N8N_USER=admin
N8N_PASSWORD=bewithU_n8n_admin_2024
N8N_WEBHOOK_URL=http://localhost:5678
N8N_BASIC_AUTH_ACTIVE=true

# ===========================================
# Outline知识库配置
# ===========================================
OUTLINE_SECRET_KEY=outline-secret-key-change-me-in-production
OUTLINE_UTILS_SECRET=outline-utils-secret-change-me-too
OUTLINE_API_URL=http://localhost:3001
OUTLINE_API_TOKEN=your-outline-api-token

# ===========================================
# Zammad工单系统配置
# ===========================================
ZAMMAD_API_URL=http://localhost:3002
ZAMMAD_API_TOKEN=your-zammad-api-token
ZAMMAD_ADMIN_EMAIL=admin@bewithU.local
ZAMMAD_ADMIN_PASSWORD=bewithU_zammad_admin_2024

# ===========================================
# Ollama LLM配置
# ===========================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL_PRIMARY=llama3.1:8b
OLLAMA_MODEL_CHINESE=qwen2:7b
OLLAMA_MODEL_CODE=mistral:7b

# ===========================================
# 应用配置
# ===========================================
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
API_PORT=8000
FRONTEND_PORT=3000

# ===========================================
# 邮件配置（可选）
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@bewithU.local

# ===========================================
# 日志配置
# ===========================================
LOG_LEVEL=info
LOG_FILE=logs/bewithU.log

# ===========================================
# 文件存储配置
# ===========================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt,md

# ===========================================
# 多语言配置
# ===========================================
DEFAULT_LANGUAGE=ja
SUPPORTED_LANGUAGES=ja,zh,en

# ===========================================
# 性能配置
# ===========================================
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000
CACHE_TTL=3600

# ===========================================
# 开发环境配置
# ===========================================
DEBUG=bewithU:*
ENABLE_CORS=true
ENABLE_SWAGGER=true

# ===========================================
# 生产环境配置
# ===========================================
# 在生产环境中，请确保：
# 1. 更改所有默认密码和密钥
# 2. 使用强密码
# 3. 启用HTTPS
# 4. 配置防火墙
# 5. 定期备份数据库
# ===========================================

